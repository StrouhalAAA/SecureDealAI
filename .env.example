# -----------------------------------------------------------------------------
# SecureDealAI - Environment Variables
# -----------------------------------------------------------------------------
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# 1. Supabase Project URL
# -----------------------------------------------------------------------------
# Found in: Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co

# -----------------------------------------------------------------------------
# 2. Supabase API Keys
# -----------------------------------------------------------------------------
# "Publishable Key" (formerly Anon Key)
# Safe to use in browsers/frontend
# Found in: Settings → API → Project API keys
SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxx

# "Secret Key" (formerly Service Role Key)
# WARNING: Use only on server/backend - bypasses RLS
SUPABASE_SECRET_KEY=sb_secret_xxx

# -----------------------------------------------------------------------------
# 3. Direct Database Access (Optional)
# -----------------------------------------------------------------------------
# Required for direct DB access (Prisma, Drizzle, etc.)
# Found in: Settings → Database → Connection string → URI
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@[pooler-url]:6543/postgres

# Mistral OCR API
MISTRAL_API_KEY=
MISTRAL_API_URL=https://api.mistral.ai/v1/ocr